# Shopify App Configuration
# Copy this file to .env and fill in your Shopify app credentials

# Your Shopify app's API key
VITE_SHOPIFY_APP_ID=your_app_id_here

# Your Shopify app's secret key (keep this secure)
VITE_SHOPIFY_APP_SECRET=your_app_secret_here

# OAuth redirect URI - update this to match your deployment
VITE_SHOPIFY_REDIRECT_URI=https://0124c68cd808.ngrok-free.app/auth/callback

# Scopes your app needs (comma-separated)
VITE_SHOPIFY_SCOPES=read_products,read_orders,read_customers,read_inventory,read_analytics,read_fulfillments

# Development settings
VITE_DEV_MODE=true
VITE_DEMO_STORE=demo-store-dev
